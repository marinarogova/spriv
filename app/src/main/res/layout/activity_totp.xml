<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context="com.spriv.activity.TOTPActivity" >

    <TextView 
	    android:id="@+id/totp_account"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="@color/black"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin"
    	android:paddingTop="@dimen/activity_vertical_margin"
    	android:paddingBottom="@dimen/activity_vertical_margin"
	    android:background="#e0eee0"
	    android:textSize="@dimen/large_text_size"
	    android:text="ofir@gmail.com"/>
    <LinearLayout
    android:id="@+id/center_layout"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical">
	<TextView
	    android:id="@+id/totp_code"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:textAlignment="gravity"
	    android:gravity="center_horizontal"
	    android:textColor="@color/black"
	    android:padding="@dimen/button_padding"
	    android:textSize="@dimen/x5large_text_size"
	    android:text="345678"/>
	<TextView 
	    android:id="@+id/totp_time"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:textColor="@color/gray"
	    android:textAlignment="gravity"
	    android:gravity="center_horizontal"
	    android:textSize="@dimen/large_text_size"
	    android:text="28 seconds"/>
</LinearLayout>

</RelativeLayout>
